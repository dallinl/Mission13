@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>

<h2> Here is a list of all the Bowlers </h2>

<h4> Want to add a bowler? </h4>

<a asp-controller="Home" asp-action="Create" class="btn btn-sm btn-outline-dark btn-primary">Add a Bowler</a>


// display all bowlers in a table
<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>BowlerID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Middle Initial</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
            <td>Team Name</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.BowlerID</td>
            <td>@x.BowlerFirstName</td>
            <td>@x.BowlerLastName</td>
            <td>@x.BowlerMiddleInit</td>
            <td>@x.BowlerAddress</td>
            <td>@x.BowlerCity</td>
            <td>@x.BowlerState</td>
            <td>@x.BowlerZip</td>
            <td>@x.BowlerPhoneNumber</td>
            <td>@x.Team.TeamName</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@x.BowlerID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@x.BowlerID">Delete</a></td>

        </tr>
        }
    </tbody>

</table>